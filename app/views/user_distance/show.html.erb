<%- model_class = UserDistance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @user_distance.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:restaurant_id) %>:</strong></dt>
  <dd><%= @user_distance.restaurant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:distance_from_user) %>:</strong></dt>
  <dd><%= @user_distance.distance_from_user %></dd>
  <dt><strong><%= model_class.human_attribute_name(:drive_time_for_user) %>:</strong></dt>
  <dd><%= @user_distance.drive_time_for_user %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_distances_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_distance_path(@user_distance), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_distance_path(@user_distance),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
