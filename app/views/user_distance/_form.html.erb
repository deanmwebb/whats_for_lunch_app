<%= simple_form_for @user_distance, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :user_id %>
  <%= error_span(@user_distance[:user_id]) %>
  <%= f.input :restaurant_id %>
  <%= error_span(@user_distance[:restaurant_id]) %>
  <%= f.input :distance_from_user %>
  <%= error_span(@user_distance[:distance_from_user]) %>
  <%= f.input :drive_time_for_user %>
  <%= error_span(@user_distance[:drive_time_for_user]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_distances_path, :class => 'btn btn-default' %>
<% end %>
