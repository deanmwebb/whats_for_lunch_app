<%= simple_form_for(@attended_restaurant, :html => { :class => 'form-horizontal' } ) do |f| %>
<%= f.error_notification %>

  <%= f.input :restaurant_id %>
  <%= error_span(@attended_restaurant[:restaurant_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@attended_restaurant[:user_id]) %>
  <%= f.label :date_attended, "Date Attended (Optional)" %>
  <%= f.text_field :date_attended, :id => "datepicker", :value => Date.today %>
  <%= error_span(@attended_restaurant[:date_attended]) %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn btn-default' %>
<% end %>

<script>
$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>