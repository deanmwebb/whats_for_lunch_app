<%= simple_form_for(@user_distance) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :restaurant_id %>
    <%= f.input :distance_from_user %>
    <%= f.input :drive_time_for_user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
