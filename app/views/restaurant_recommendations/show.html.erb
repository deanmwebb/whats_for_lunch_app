<%- model_class = RestaurantRecommendation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:restaurant_id) %>:</strong></dt>
  <dd><%= @restaurant_recommendation.restaurant_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @restaurant_recommendation.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:overall_rating) %>:</strong></dt>
  <dd><%= @restaurant_recommendation.overall_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:budget_rating) %>:</strong></dt>
  <dd><%= @restaurant_recommendation.budget_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:distance_rating) %>:</strong></dt>
  <dd><%= @restaurant_recommendation.distance_rating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:uniqueness_rating) %>:</strong></dt>
  <dd><%= @restaurant_recommendation.uniqueness_rating %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              restaurant_recommendations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_restaurant_recommendation_path(@restaurant_recommendation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_recommendation_path(@restaurant_recommendation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
