<%= simple_form_for @restaurant_recommendation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :restaurant_id %>
  <%= error_span(@restaurant_recommendation[:restaurant_id]) %>
  <%= f.input :user_id %>
  <%= error_span(@restaurant_recommendation[:user_id]) %>
  <%= f.input :overall_rating %>
  <%= error_span(@restaurant_recommendation[:overall_rating]) %>
  <%= f.input :budget_rating %>
  <%= error_span(@restaurant_recommendation[:budget_rating]) %>
  <%= f.input :distance_rating %>
  <%= error_span(@restaurant_recommendation[:distance_rating]) %>
  <%= f.input :uniqueness_rating %>
  <%= error_span(@restaurant_recommendation[:uniqueness_rating]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurant_recommendations_path, :class => 'btn btn-default' %>
<% end %>
