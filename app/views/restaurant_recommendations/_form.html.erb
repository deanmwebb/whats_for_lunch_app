<%= simple_form_for(@restaurant_recommendation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :restaurant_id %>
    <%= f.input :user_id %>
    <%= f.input :overall_rating %>
    <%= f.input :budget_rating %>
    <%= f.input :distance_rating %>
    <%= f.input :uniqueness_rating %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
