<%- model_class = RestaurantRecommendation -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Overall Recommendation" %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:restaurant_id) %></th>
      <th><%= "Address" %></th>
      <th><%= "Distance" %></th>
      <th><%= "Last Attended" %></th>
      <th><%= model_class.human_attribute_name(:overall_rating) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurant_recommendations.order(:overall_rating).reverse.take(10).each do |restaurant_recommendation| %>
      <tr>
        <td><%= link_to restaurant_recommendation.id, restaurant_recommendation_path(restaurant_recommendation) %></td>
        <td><%= Restaurant.find(restaurant_recommendation.restaurant_id).name %></td>
        <td><%= Restaurant.find(restaurant_recommendation.restaurant_id).address %></td>
        <td><%= "#{(UserDistance.find(restaurant_recommendation.restaurant_id).distance_from_user/1609.0).round(2)} mi" %></td>
        <td><%= Restaurant.find(restaurant_recommendation.restaurant_id).last_attended.strftime("%m/%d/%Y") unless Restaurant.find(restaurant_recommendation.restaurant_id).last_attended.nil? %></td>
        <td><%= restaurant_recommendation.overall_rating.round(2) %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      restaurant_recommendation_path(restaurant_recommendation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_recommendation_path(restaurant_recommendation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

