<%- model_class = RestaurantRecommendation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:restaurant_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:overall_rating) %></th>
      <th><%= model_class.human_attribute_name(:budget_rating) %></th>
      <th><%= model_class.human_attribute_name(:distance_rating) %></th>
      <th><%= model_class.human_attribute_name(:uniqueness_rating) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @restaurant_recommendations.each do |restaurant_recommendation| %>
      <tr>
        <td><%= link_to restaurant_recommendation.id, restaurant_recommendation_path(restaurant_recommendation) %></td>
        <td><%= restaurant_recommendation.restaurant_id %></td>
        <td><%= restaurant_recommendation.user_id %></td>
        <td><%= restaurant_recommendation.overall_rating %></td>
        <td><%= restaurant_recommendation.budget_rating %></td>
        <td><%= restaurant_recommendation.distance_rating %></td>
        <td><%= restaurant_recommendation.uniqueness_rating %></td>
        <td><%=l restaurant_recommendation.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_restaurant_recommendation_path(restaurant_recommendation), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      restaurant_recommendation_path(restaurant_recommendation),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_restaurant_recommendation_path,
            :class => 'btn btn-primary' %>
