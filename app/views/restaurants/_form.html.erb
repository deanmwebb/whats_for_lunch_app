<%= simple_form_for @restaurant, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@restaurant[:name]) %>
  <%= f.input :address %>
  <%= error_span(@restaurant[:address]) %>
  <%= f.input :cuisine %>
  <%= error_span(@restaurant[:cuisine]) %>
  <%= f.input :cost %>
  <%= error_span(@restaurant[:cost]) %>
  <%= f.input :rating %>
  <%= error_span(@restaurant[:rating]) %>
  <%= f.label :last_attended, "Date Last Attended (Optional)" %>
  <%= f.text_field :last_attended, :id => "datepicker", :value => Date.today %>
  <%= error_span(@restaurant[:last_attended]) %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                restaurants_path, :class => 'btn btn-default' %>
<% end %>

<script>
$('#datepicker').datepicker({format: 'yyyy-mm-dd'});
</script>